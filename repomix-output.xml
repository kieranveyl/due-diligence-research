            financial_data["market_data"] = {
                "stock_price": 150.25,
                "market_cap": "50.2B",
                "pe_ratio": 18.5,
                "revenue_ttm": "12.5B"
            }

        if "credit_analysis" in focus_areas:
            # Mock credit information
            financial_data["credit_info"] = {
                "credit_rating": "A-",
                "debt_to_equity": 0.45,
