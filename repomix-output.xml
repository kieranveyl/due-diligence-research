    # Validate scope
    valid_scopes = {"financial", "legal", "osint", "verification", "research"}
    invalid_scopes = set(config.default_scope) - valid_scopes
    if not invalid_scopes:
        validation_results.append(("Default Scope", "", ", ".join(config.default_scope)))
    else:
